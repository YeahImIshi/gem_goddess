<h1>Shopping Cart</h1>
<ul>
  <% @cart_products.each do |product| %>
    <li>
      <%= product.title %> - <%= number_to_currency(product.price) %>
      <%= form_tag(update_quantity_cart_path(product), method: :put) do %>
        <%= text_field_tag :quantity, product.quantity %>
        <%= submit_tag "Update Quantity" %>
      <% end %>
      <%= button_to "Remove", remove_from_cart_path(product), method: :delete %>
    </li>
  <% end %>
</ul>
