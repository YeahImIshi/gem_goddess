<h1>Shopping Cart</h1>
<ul>
  <% @cart_products.each do |cart_item| %>
    <li>
      <%= cart_item.product.title %> - <%= number_to_currency(cart_item.product.price) %>
      <%= form_tag(update_quantity_cart_path(cart_item.product), method: :put) do %>
        <%= text_field_tag :quantity, cart_item.quantity %>
        <%= submit_tag "Update Quantity" %>
      <% end %>
      <%= button_to "Remove", remove_from_cart_path(cart_item.product), method: :delete %>
    </li>
  <% end %>
</ul>